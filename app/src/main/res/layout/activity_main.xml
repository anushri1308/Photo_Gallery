<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DE040FB"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Welcome to PhotoGallery"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/pic0"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/pic1" />

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic2" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic3" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic4" />

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic5" />

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic0"
            android:layout_margin="30dp">

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:onClick="prev"
                app:srcCompat="@mipmap/baseline_skip_previous_black_48dp"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="next"
                app:srcCompat="@mipmap/baseline_skip_next_black_48dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Nature 1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>
</ScrollView>